<form action="/user/sign_up_ok" method="post" enctype="multipart/form-data" class="form-horizontal" >
  <fieldset>
    <legend>Kayıt</legend>
    <div class="control-group">
      <label class="control-label" for="input-tc">Tc Kimlik Numarası (*)</label>
      <div class="controls">
	<input type="text" class="input-xlarge required digits" id="input-tc" name="tc" value="">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input02">Ad (*)</label>
      <div class="controls">
	<input type="text" class="input-xlarge required" id="input02" name="first_name" value="">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input03">Soyad (*)</label>
      <div class="controls">
	<input type="text" class="input-xlarge required" id="input03" name="last_name" value="">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Cinsiyet (*)</label>
      <div class="controls">
	<label class="radio">
	  <input type="radio" name="gender" id="optionsRadios1" value="Erkek" checked> Erkek
	</label>
	<label class="radio">
	  <input type="radio" name="gender" id="optionsRadios2" value="Bayan"> Bayan
	</label>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="select11">Doğum Tarihi (*)</label>
      <div class="controls">
	<input type="text" class="input-xlarge required" id="input3" name="birthday" data-datepicker="datepicker">
	<p class="help-block">Örneğin: 1990-04-05</p>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="fileInput">Fotoğraf</label>
      <div class="controls">
	<input type="file" class="input-file" id="fileInput" name="image">
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>İletişim Bilgileri</legend>
    <div class="control-group">
      <label class="control-label" for="input14">E-mail (*)</label>
      <div class="controls">
	<input type="text" class="input-xlarge required email" id="input14" name="email" value="">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input11">Telefon Numarası</label>
      <div class="controls">
	<input type="text" class="input-xlarge" id="input11" name="phone_number">
	<p class="help-block">Örneğin: 0506-693-4002</p>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="select-city">İl (*)</label>
      <div class="controls">
	<select class="input-xlarge required" id="select-city" name="city_id">
	  <option value=""></option>
	  <% City.all.each do |city| %>
	    <option value="<%= city[:id] %>"><%= city[:city] %></option>
	  <% end %>
	</select>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="select-district">İlçe (*)</label>
      <div class="controls">
	<select class="input-xlarge required" id="select-district" name="district_id">
	  <% if params[:city_id] %>
	    <% District.find_all_by_city_id(params[:city_id]).each do |district| %>
	      <option value="<%= district[:id] %>" <%= 'selected' if district[:id] == params[:district_id].to_i %>><%= district[:district] %></option>
	    <% end %>
	  <% end %>
	</select>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input16">Adres</label>
      <div class="controls">
	<textarea type="text" class="input-xlarge" id="input16" rows="3" name="address"></textarea>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Parola Bilgileri</legend>
    <div class="control-group">
      <label class="control-label" for="input14">Parola (*)</label>
      <div class="controls">
	<input type="password" class="input-xlarge required" id="input14" name="password" value="">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input15">Parola Tekrar (*)</label>
      <div class="controls">
	<input type="password" class="input-xlarge required" id="input15" name="password2">
      </div>
    </div>
  </fieldset>

  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    <a class="btn" href="/">İptal</a>
  </div>
</form>

